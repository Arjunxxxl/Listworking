<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="70dp"
    android:background="#ac00"
    >


    <TextView
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="12a"
        android:id="@+id/d_id"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="name"
        android:id="@+id/d_name"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/d_id"
        android:layout_toEndOf="@+id/d_id" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="price"
        android:id="@+id/d_price"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/d_name"
        android:layout_toEndOf="@+id/d_name" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="qty"
        android:id="@+id/d_qty"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/d_price"
        android:layout_toEndOf="@+id/d_price" />
</RelativeLayout>